// ==========================================================================
/******** LAYOUT ********/
// ==========================================================================

//CONTENIDO - SIDEBAR----------------------------
.contenedor
	float left
	width 80%
	margin 0 10%
	padding 0 30px
	
	.contenido
		float left
		padding 15px 40px 15px 17px
		
	.sidebar
		float right
		padding 30px 0
		
		.login
			margin-bottom 20px
			float left
			width 100%
			
			.btn
				width 100%
				float left
			
			.btn:hover, .btn:focus
				background-color $naranja-dark
				color #fff
				
			.lnk
				width 100%
				color $naranja
				margin-top 10px
				float left
				font-weight bold
				text-align center
				
			.enviar
				background-color $naranja
				float left
				font-weight bold
		
			
		.articulos
			float left	
			
			.titulo-multiple
				width 100%
				border-bottom 1px solid gris7
				margin-bottom 10px
				
				h3
					color white
					font-size 11px
					text-align center
					padding 5px
					font-family Arvo-Bold
				
				.subtitulo-a
					width 45%
					float left
					background-color gris7
					
				.subtitulo-b
					width 45%
					margin-left 5px
					float left
					background-color gris4
			

//SLIDER HOME ----------------------------
.slider-home
	background-color gris1
	height 250px



//FOOTER----------------------------
.footer
	background-color #222
	position absolute
	bottom 0
	width 100%
	
	.copyright
		background-color gris10
		padding 5px 0
		
		.contenido
			display block
			margin 0 auto
			float none
			padding 5px 30px
			
			p
				font-size 10px
				color gris3
			
			.email
				float right
				text-align right
				font-size 10px
				color gris3
				
				p
					float right
			
				.glyphicon
					padding 2px 5px 0 0
					float right
