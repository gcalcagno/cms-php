//CONTENIDO - SIDEBAR----------------------------
.contenedor
	float left
	width 80%
	margin 0 10%
	padding 0 30px
	
	.contenido
		float left
		padding 15px 40px 15px 17px
		
	.sidebar
		float right
		padding 30px 0
		
		.share
			
			.item
				padding 5px
				width 30%
				margin 1%
				border-radius 5px
				float left
				
				p
					color white
					text-align center
					font-size 8px
					margin-top 5px 0 3px 0
					
				img
					width 66%
					margin 0 16%

			.facebook
				background-color azul-seguinos
			
			.dona
				background-color naranja
			
			.tienda
				background-color rosa-tienda
		
		.plugin-facebook
			margin-top 20px
			float left
			width 100%
			
			h3
				font-size 14px
				padding 6px
				
		.frase
			margin-top 20px
			float left
			
			.subtitulo
				margin-bottom 5px
			
			h3
				font-size 14px
				padding 6px
				
			.item
				background-color gris1
				padding 15px
				position relative
				
				.comillas
					position absolute
					width 30px
				
				.texto
					width 100%
					padding-left 35px
					color gris4
					font-style oblique
				
				.autor
					position relative
					left 0
					bottom	0
					margin-top 20px
					font-size 14px
					font-family Arvo-Bold
					color gris4
					
				.comilla-a
					top 5px
					left 5px
					
				.comilla-b
					bottom 5px
					right 5px
			
		.articulos
			margin-top 20px
			float left	
			
			.titulo-multiple
				width 100%
				border-bottom 1px solid gris7
				margin-bottom 10px
				
				h3
					color white
					font-size 11px
					text-align center
					padding 5px
					font-family Arvo-Bold
				
				.subtitulo-a
					width 45%
					float left
					background-color gris7
					
				.subtitulo-b
					width 45%
					margin-left 5px
					float left
					background-color gris4
			

//SLIDER HOME ----------------------------
.slider-home
	background-color gris1
	height 250px
	

	
//HEAD----------------------------
.head
	
	.menu
		background-color gris7
		margin-bottom 0px	
		border-radius 0
		
		:focus
			background-color transparent
			
		.contenedor
