		background-color gris10
		padding 5px 0
		
		.contenido
			display block
			margin 0 auto
			float none
			padding 5px 30px
			
			p
				font-size 10px
				color gris3
			
			.email
				float right
				text-align right
				font-size 10px
				color gris3
				
				p
					float right
			
				.glyphicon
					padding 2px 5px 0 0
					float right
					
	.bloque-footer
		
		.item
			padding 30px
			
			li
				color gris3
				font-size 12px
		
			hr
				border-top 1px solid rgba(114, 113, 113, .5)
				border-bottom: none
				margin 12px 0
				
			img
				width 100%
				padding-bottom 20px					
				
			p
				color gris3
				font-size 13px
			
			.min
				font-size 11px
					
			.titulo
			
				h4
					color gris2
					font-size 14px
					margin 0
					padding 0
				
				hr
					margin 8px 0px 20px 0px
			
			.form
				width 100%
				
				::-webkit-input-placeholder
					color rgba(114, 113, 113, .7)
					font-size 11px
					font-style oblique	

				:-moz-placeholder
					color gris3

				::-moz-placeholder
					color gris3

				:-ms-input-placeholder
					color gris3
	  
				input 
					width 100%
					background-color gris8
					border 1px solid rgba(114, 113, 113, .3)
					padding 5px
					margin 2px 0
					border-radius 2px
					color gris2
					height 28px
						
				textarea
					width 100%
					background-color gris8
					border 1px solid rgba(114, 113, 113, .3)
					padding 5px
					margin 2px 0
					border-radius 2px
					color gris2
					height 80px
					
				button
					width 100px
					background-color form-azul
					padding 5px
					margin 6px 0
					border-radius 2px
					color gris2
					border none
					text-transform uppercase
					font-family fuente-bold
					letter-spaccing 1px
					font-size 10px
					height 28px
			
			.form-suscripcion
				padding-top 10px
				
				input 
					width 63%
					margin-right 2%
					float left
		
				button
					width 35%
					float left
					margin 2px 0
					


