			border-color none
		
		.dropdown-menu
			background-color gris7
		
		.dropdown:hover .dropdown-menu
			display block

			
		


	
	.imagen
		width 100%
		heigth 50px
		background-repeat: no-repeat;
		-webkit-background-size: cover;
		-moz-background-size: cover;
		background-size: cover;
		background-position: center;
		
		img
			width 100%	
		
		.default
			display block
			
		
	button
		color #fff
		float left
	
	.icon-bar
