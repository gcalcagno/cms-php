				display none !important
			
			.buscar
				width 20%
				float right
				position relative
				
				.glyphicon
					position absolute
					color gris2
					right 8px
					top 17px
				
				input 
					width 100%
					background-color gris8
					border none
					padding 5px
					margin 10px 0 0 0
					border-radius 2px
					color gris2
					height 28px
			
			.nav>li>a:focus
				text-decoration none
				background-color rgba(0, 0, 0, .0)

			.navbar-collapse
				width 80%
			
			a
				color #fff
				font-size 10px
				
			li a:hover
				background-color gris5
				
			.marron a:hover
				background-color marron
			
			.verde a:hover
