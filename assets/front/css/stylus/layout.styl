/* RESPONSIVE - LAYOUT */
// ==========================================================================

/*mobile--------------------------------------------------*/
@media screen and (min-width: 0px) and (max-width : 767px){
	.contenedor {
	    width: 94%;
	    margin: 0 3%;
	    padding: 0px;
	}

	.contenedor .contenido {
	    padding: 15px 0px 15px 0px !important;
	}

	.head .menu .contenedor {
	  width: 100%;
	  margin: 0;
	}
	
	.contenedor .sidebar {
	    padding-top: 0;
	}
	
	.bloque-novedades .bloque-b {
	    padding-left: 0 !important;
	    padding-top: 30px !important;
	}
	
	.bloque-novedades .bloque-a {
	    padding-right: 0px !important;
	    border-right: none !important;
	}
	
	.bloque-posteos-relacionados .posteos .item {
	    padding: 0px 0px 25px 0px!important;
	}
	
	.head .menu .contenedor .buscar {
	  width: 60%;
	  position: absolute;
	  top: 0;
	  right: 10px;
	}
	
	.head .menu .contenedor .navbar-collapse {
	  width: 100%;
	}

	//footer
	.footer .copyright .contenido .email p {
	  width: 70%;
	  text-align: left;
	}
	
	.footer .copyright .contenido .email .glyphicon {
	  width: 30%;
	  text-align: right;
	}
	
	.footer .copyright .contenido .email {
	  padding-bottom: 10px;
	}
	
	.footer .clientes .carousel .row .span3 {
	  width: 100%;
	}
	
	.titulo-multiple h3 {
	    height: 25px !important;
	    font-size: 12px !important;
	}
}

