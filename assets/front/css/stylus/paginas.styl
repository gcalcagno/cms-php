.subtitulo-default
	background-color #222
	color #fff
	padding 5px
	font-size 16px
	margin-bottom 5px
	
/* TITULOS */
.titulo-multiple
	width 100%
	display inline-block
	border-bottom 1px solid gris7
	margin-bottom 10px
	
	h3
		color #fff
		height 30px
		font-size 16px
		text-align center
		padding 5px
	
	.subtitulo-a
		width auto
		float left
		
	.subtitulo-b
		width auto
		margin-left 5px
		float left

		
/* SUBTITULOS */
.subtitulo
	width 100%
	height 25px
	margin-bottom 10px
	
	h3
		display inline
		color white
		height 30px
		font-size 16px
		text-align center
		padding 5px
		
.titulo-naranja
	border-bottom solid 1px naranja
	
	h3
		background-color naranja
			
.titulo-gris
	border-bottom solid 1px gris7
	
	h3
		background-color gris7
		
.titulo-negro
	border-bottom solid 1px #222
	
	h3
		background-color #222


.titulo-azul-seguinos
	border-bottom solid 1px azul-seguinos
	
	h3
		background-color azul-seguinos

		
