	.bloque-destacado .texto {
	    padding-left: 0px !important;
	    margin-bottom: 20px;
	}
	.bloque-destacado .imagen img {
	    margin-bottom: 10px;
	}
	.bloque-posteos-relacionados .posteos .item .imagen{
		padding-top: 70%;
		height: auto;
	}
	   

}

