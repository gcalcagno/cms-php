/*BLOQUES-------------------------------------------*/
.bloque
	width 100%
	float left
	margin-bottom 30px
	

/*BLOQUE Destacado*/
.bloque-destacado
		
	.imagen
		float left
		
		img
			width 100%
					
	.texto
		float left
		padding-left 10px
		
		h6
			margin 0
			font-family Arvo-Bold
			font-size 10px
		
		h4
			margin 5px 0
			line-height 25px
		
		p
			text-align justify
			margin-bottom 10px
		
		.boton
			float left

/*BLOQUE Novedades*/		
.bloque-novedades
				
	.bloque-a
		padding-right 10px
		border-right 1px solid rgba(0, 0, 0, .2)
		
		.imagen
			width 100%
			float left
			margin-bottom 10px
			
			img
				width 100%
			
		.texto
			width 100%
			float left
			
			h6
				margin 0
				font-family Arvo-Bold
				font-size 10px
			
			h4
				margin 5px 0
				line-height 25px
			
			p
				text-align justify
				margin-bottom 10px
	.bloque-b
		padding-left 10px
		
		img
			width 100%

.widget		
	.item
		border-bottom 1px solid rgba(0, 0, 0, .2)
		padding-bottom 10px
		margin-bottom 10px
		
		.imagen
			width 30%
			float left
			padding-right 5px
			height 50px
			background-size cover
			background-position center
			
		.texto
			width 70%
			float left
			padding-left 5px
			
			h6
				margin 0
				font-family Arvo-Bold
				font-size 10px
			
			h4
				text-align justify
				margin-bottom 10px
				font-size 12px
					
/*BLOQUE Posteos*/
.bloque-posteos-relacionados
	
	.posteos
		width 102%
		margin-left -1%
		
		a
			color #000
		
		a:hover
			opacity .8
					
		.widget	
			width 100%
			float left
				
			.item
				width 50%
				float left4
				border-bottom none
			
		.item
			padding 1%
			
			.imagen
				width 100%
				float left
				margin-bottom 10px
				height 150px
				background-size cover
				background-position center
				border 1px solid rgba(134,134,134,.3)
							
			.texto
				width 100%
				float left
				max-height 150px
				min-height 150px
				overflow hidden
				
				h6
					margin 0
					font-family Arvo-Bold
					font-size 10px
				
				h4
					margin 5px 0
					line-height 25px
				
				p
					text-align justify
					margin-bottom 10px
				
				.boton
					float left
					




