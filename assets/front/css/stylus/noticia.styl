// ==========================================================================
/******** NOTICIA ********/
// ==========================================================================

.noticia
	margin-bottom 30px
	float left

	.head
		width 100%
		float left
		
		.titulo
			width 100%
			
	.body
		width 100%
		float left
		
		img
			width 49%
			margin-right 1%
			float left
			border 1px solid rgba(134,134,134,0.3)
		p
			text-align justify
			width 50%
			float left
			
		span
			font-weight bold
	
	.tags
		width 100%
		float left
		
		hr
			margin 5px 0
			float left
		
		.titulo
			float left
			height 30px
			padding 5px
		
		.item
			height 30px
			background-color gris4
			width auto
			display inline
			padding 5px
			color #fff
			float left
			margin 0 5px
	
	.data
		width 100%
		float left
		
		hr
			margin 8px 0px
			float left
			width 100%
		
		.hr-bottom
			margin-top 4px
				
		.compartir
			width 50%
			float left
			
			.item
				float left
				height 20px
				margin-right 15px
					
		.info
			width 50%
			float right
			margin-top 3px
			
			.item
				float right
				height 20px
				margin-left 15px
				
				img
					width 15px
					border-radius 100%
					float left
					margin-right 3px
				
				p
					float left
					font-size 10px
	
	
			

// ==========================================================================
/* RESPONSIVE - CONTACTO */
// ==========================================================================

/*mobile--------------------------------------------------*/
@media screen and (min-width: 0px) and (max-width : 767px){
	.noticia .data .compartir {
	    width: 100%;
	}
	.noticia .data .info {
	    width: 100%;
	}
	
	.noticia .data .info .item {
	    float: left;
	    height: 20px;
	    margin-left: 0px;
	    margin-right: 15px;
	}
}

