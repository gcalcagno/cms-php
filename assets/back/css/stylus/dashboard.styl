// ==========================================================================
/* DASHBOARD -*/
// ==========================================================================

.dashboard
	
	.jumbotron
		text-align center
		padding 10px
		background-color #fff
		color #000
		border 1px solid #999
		
		.text
			color #999
		
		.title
			padding-bottom: 9px
			margin: 10px
			
			i
				color $naranja
		
	.block-dashboard
		width 103%
		position relative
		margin-left -1%
		
		.block-item
			width 31%
			margin 0 1%
			float left
			
		.panel-primary
			color #666
			background-color #fff
			border 1px solid #999
			text-align center
			
			.title
				font-size 20px
				width 100%
				float left
				text-align center
			
			hr
				border-top 1px #000 dashed
				float left
								
			.icon
				font-size 50px
				width 100%
				text-align center
				background-color $naranja
				border-radius 100%
				padding 20px 10px 10px 10px
				width 90px
				height 90px
				margin 0 auto
				margin-bottom 10px
				color #000
				
				
		.panel-primary:hover, panel-primary:focus
			background-color #ECECEC
			
			.icon
				background-color #000
				color  $naranja
				transition all 300ms ease-out 5ms
				-ms-transition all 300ms ease-out 5ms
				-webkit-transition all 300ms ease-out 5ms
				-ms-transition all 300ms ease-out 5ms
				

// ==========================================================================
/* RESPONSIVE - DEFAULT */
// ==========================================================================

/*mobile--------------------------------------------------*/
@media screen and (min-width: 0px) and (max-width : 767px){

	.block-dashboard{
		width: 100% !important;
	}	
	
	.block-dashboard .block-item{
		width: 100% !important;
		margin: 0 !important;
	}
}


