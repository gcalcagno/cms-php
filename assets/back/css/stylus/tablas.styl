/* TABLAS -*/
// ==========================================================================

.tablas
					
	.panel-default
		border-color #ddd
		background-color #fff
		padding 0
					
		.panel-body
			padding 0px
			
			.table
				margin-bottom 0
				
				.center
					text-align center
					
				th
					background-color #F1F1F1
					
				td
					vertical-align middle
					
				.col-5
					width 5%

				.col-10
					width 10%
				
				.col-20
					width 20%
					
				.col-30
					width 30%
					
				.col-40
					width 40%
			
	.btn-naranja:hover, .btn-naranja:focus, .btn-naranja:active
		background-color $naranja-dark
		border-color $naranja-dark	
			
	.btn-edit
		background-color #fff
		border-radius 100%
		color #000
		font-weight bold
		border $naranja
		width 30px
		height 30px
		padding 5px
		
	.btn-edit:hover, .btn-edit:focus
		color #000
		background-color $naranja